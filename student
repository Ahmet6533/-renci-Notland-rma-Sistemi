class Student{
  int Id;
  String firstname='';
  String lastname='';
  int grade;
  bool status;
  Student.withId (int Id,String firstname,String lastname,int grade,bool status){
    this.firstname=firstname;
    this.Id=Id;
    this.lastname=lastname;
    this.grade=grade;
    this.status=true;
  }

  String sinavHesapla(int puan){
    String mesaj="";
    if(puan>=50){
      mesaj="Geçti";
    }  else if (puan>=40){
      mesaj="Bütünlemeye Kaldı";
    }else {
      mesaj="Kaldı";
    }
    return mesaj;
  }
}
